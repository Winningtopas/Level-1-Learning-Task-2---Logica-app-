<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/conjunction_and"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:text="@string/A"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:text="@string/B"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/B3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/B3"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/B2"
        app:layout_constraintStart_toStartOf="@+id/B2"
        app:layout_constraintTop_toBottomOf="@+id/B2" />

    <TextView
        android:id="@+id/A0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/A0"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/B0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/B0"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/A3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/A3"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/A2"
        app:layout_constraintStart_toStartOf="@+id/A2"
        app:layout_constraintTop_toBottomOf="@+id/A2" />

    <TextView
        android:id="@+id/A1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/A1"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/A0"
        app:layout_constraintStart_toStartOf="@+id/A0"
        app:layout_constraintTop_toBottomOf="@+id/A0" />

    <TextView
        android:id="@+id/B1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/B1"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/B0"
        app:layout_constraintStart_toStartOf="@+id/B0"
        app:layout_constraintTop_toBottomOf="@+id/B0" />

    <TextView
        android:id="@+id/B2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/B2"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/B1"
        app:layout_constraintStart_toStartOf="@+id/B1"
        app:layout_constraintTop_toBottomOf="@+id/B1" />

    <TextView
        android:id="@+id/A2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/A2"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/A1"
        app:layout_constraintStart_toStartOf="@+id/A1"
        app:layout_constraintTop_toBottomOf="@+id/A1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="64dp"
        android:text="@string/a_b"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/answer0"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/B0"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/B0"
        android:autofillHints="" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/B1"
        app:layout_constraintEnd_toEndOf="@+id/answer0"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/answer0"
        app:layout_constraintTop_toTopOf="@+id/B1" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/B2"
        app:layout_constraintEnd_toEndOf="@+id/answer1"
        app:layout_constraintStart_toStartOf="@+id/answer1"
        app:layout_constraintTop_toTopOf="@+id/B2" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/B3"
        app:layout_constraintEnd_toEndOf="@+id/answer2"
        app:layout_constraintStart_toStartOf="@+id/answer2"
        app:layout_constraintTop_toTopOf="@+id/B3" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/btnConfirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/B3"
        app:layout_constraintStart_toStartOf="@+id/B3"
        app:layout_constraintTop_toBottomOf="@+id/B3" />

</androidx.constraintlayout.widget.ConstraintLayout>